<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_teacher_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.asus.lastteacher.TeacherMainActivity">

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="@string/welcome_message"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:id="@+id/spinner"
        android:layout_below="@+id/welcomeText"
        android:layout_alignParentStart="true" />


    <Button
        android:text="Student LÄ±st"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:id="@+id/student_list"
        android:onClick="showStudentList"
        android:drawableLeft="@drawable/ic_professors"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="52dp" />

    <Switch
        android:text="TAKE ATTENDANCE   "
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:id="@+id/take_attendance"

        android:visibility="visible"
        android:layout_below="@+id/spinner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp" />

    <TextView
        android:text="Time Remaining:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time_text"
        android:layout_below="@+id/take_attendance"
        android:layout_alignStart="@+id/student_list"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/time_remain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/time_text"
        android:layout_alignEnd="@+id/take_attendance"
        tools:text="1 min 59 sec"/>


</RelativeLayout>
